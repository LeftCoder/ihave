---
import Logo from '~/components/core/Logo.astro'
import ToggleTheme from '~/components/core/ToggleTheme.astro'
import ToggleMenu from '~/components/core/ToggleMenu.astro'
---

<header
  class="sticky top-0 z-40 mx-auto w-full flex-none border-b bg-white dark:border-b-0 dark:bg-slate-900 md:bg-white/90 md:backdrop-blur-sm dark:md:bg-slate-900/90"
  id="header"
>
  <div
    class="mx-auto w-full max-w-6xl px-3 py-3 md:flex md:justify-between md:px-4"
  >
    <div class="flex justify-between">
      <a class="flex items-center" href="/">
        <Logo />
      </a>
      <div class="flex items-center md:hidden">
        <ToggleTheme />
        <ToggleMenu />
      </div>
    </div>
    <nav
      class="hidden h-screen w-full items-center text-gray-600 dark:text-slate-200 md:flex md:h-auto md:w-auto"
      aria-label="Main navigation"
    >
      <ul
        class="flex w-full flex-col pt-8 text-xl md:w-auto md:flex-row md:self-center md:pt-0 md:text-base"
      >
        <li>
          <a
            class="flex items-center px-4 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white"
            href="/cennik"
            >Cennik
          </a>
        </li>
        <li>
          <a
            class="flex items-center px-4 py-3 font-medium transition duration-150 ease-in-out hover:text-gray-900 dark:hover:text-white"
            href="/kontakt"
            >Kontakt
          </a>
        </li>
      </ul>
      <div class="mb-4 ml-2 flex items-center md:mb-0 md:self-center">
        <div class="hidden items-center md:flex">
          <ToggleTheme iconClass="w-5 h-5" />
        </div>
      </div>
    </nav>
  </div>
</header>
