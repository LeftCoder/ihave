---
import '~/assets/styles/base.css'
import MetaTags from '~/components/core/MetaTags.astro'
import BasicScripts from '~/components/core/BasicScripts.astro'
const { meta = {} } = Astro.props
---

<!doctype html>
<html lang="pl-PL" class="motion-safe:scroll-smooth 2xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
  </head>

  <body
    class="h-screen bg-white tracking-tight text-gray-900 antialiased dark:bg-slate-900 dark:text-slate-300"
  >
    <slot />
    <BasicScripts />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
